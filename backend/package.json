{
  "name": "monitor-agua-backend",
  "version": "1.0.0",
  "description": "Backend para sistema de monitoramento de água - João Monlevade",
  "author": "TCC-I",
  "private": true,
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "start:dev": "nodemon src/main.js",
    "db:create": "psql -U postgres -f database/create_database.sql",
    "db:setup": "node scripts/setup-database.js",
    "db:reset": "node scripts/setup-database.js",
    "format": "prettier --write \"src/**/*.js\"",
    "lint": "eslint \"{src,scripts}/**/*.js\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.33.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.js$",
    "collectCoverageFrom": [
      "**/*.(j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
